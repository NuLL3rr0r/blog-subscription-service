<div class="change-password row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 h-center form-horizontal">
        <div class="text-center">
            <h3>${change-password-title}</h3>
        </div>

        <br />

        <div class="form-group">
            <div class="col-sm-8 col-md-8 col-lg-8">
                ${current-password-input}
            </div>
            <label for="${current-password-input-id}" class="col-sm-4 col-md-4 col-lg-4 control-label">
                ${current-password-label-text}
            </label>
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            <div class="col-sm-8 col-md-8 col-lg-8">
                ${new-password-input}
            </div>
            <label for="${new-password-input-id}" class="col-sm-4 col-md-4 col-lg-4 control-label">
                ${new-password-label-text}
            </label>
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            <div class="col-sm-8 col-md-8 col-lg-8">
                ${confirm-password-input}
            </div>
            <label for="${confirm-password-input-id}" class="col-sm-4 col-md-4 col-lg-4 control-label">
                ${confirm-password-label-text}
            </label>
        </div>

        <div class="clearfix"></div>

        <div class="text-center">
            ${change-password-button}
        </div>

        <br />

        <div class="text-center message-area">
            ${change-password-message-area}
        </div>
    </div>
</div>

<div class="clearfix"></div>

